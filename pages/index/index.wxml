<view class="cu-bar bg-white" style="top:{{CustomBar-30}}px;"></view>

<!-- 轮播图 -->
<view class="box">
  <component-swiper id="swiper"  ></component-swiper>

</view>

<!-- icon列表 -->
<component-good-bar></component-good-bar>
<!-- 通知栏 -->
<i-notice-bar icon="systemprompt" loop>
    2018年世界杯,将于6月14日至7月15日举行;2018年世界杯,将于6月14日至7月15日举行;
</i-notice-bar>
<!-- 中间bar -->
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-pink cur':''}}" wx:for="{{tabList}}" wx:key wx:item="man" bindtap="tabSelect" data-id="{{index}}">
      {{item}}
    </view>
  </view>
</scroll-view>

<!-- 列表 -->
<view class="bg-white">
  <!-- <component-list-grid-2></component-list-grid-2> -->
  <template is="list" data="{{bgImg:bgImg}}" />
</view>




